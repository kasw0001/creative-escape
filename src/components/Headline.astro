---
import { Image } from "astro:assets";
const { link, imgsrc, alttext, headlinetitle, headline } = Astro.props;
---

<a href={link}>
  <article class="landing-article">
    <Image
      src={imgsrc}
      alt={alttext}
      width="1200"
      height="400"
      class="card-img"
    />
    <p>{headlinetitle}</p>
    <h2>{headline}</h2>
  </article>

  <style>
    a {
      text-decoration: none;
      color: inherit;
      cursor: pointer;
    }
    .landing-article {
      display: flex;
      flex-direction: column;
      flex: 1;
      height: 100%;
      text-align: center;
      padding: 1rem;
      color: #000000;
      margin: 0;
    }
    p {
      text-decoration: underline;
      margin-bottom: 0;
    }
    h2 {
      font-family: Anton;
      margin-top: 5px;
      font-weight: lighter;
      font-size: xx-large;
    }

    .card-img {
      width: 100%;
      height: 600px;
      object-fit: cover;
    }
  </style>
</a>
