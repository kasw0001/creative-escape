---
import { Image } from "astro:assets";
const { imgsrc, description, alttext, pretitle, link } = Astro.props;
---

<a href={link}>
  <article class="card">
    <Image
      src={imgsrc}
      alt={alttext}
      width="200"
      height="100"
      class="card-img"
    />
    <p><span>{pretitle}</span> {description}</p>
  </article>
</a>

<style>
  .card {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 100%;
    box-sizing: border-box;
    width: 200px;
    text-align: center;
    padding: 1rem;
    color: #000000;
    margin: 0;
    text-align: left;
  }
  span {
    text-decoration: underline;
  }
  a {
    font-family: Inter;
    text-decoration: none;
    color: inherit;
  }
  p {
    font-family: Inter;
    font-weight: lighter;
    font-size: small;
    max-width: 300px;
  }

  .card-img {
    width: 100%;
    height: 100px;
    object-fit: cover;
  }
</style>
